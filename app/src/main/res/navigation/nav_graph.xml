<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="kz.adamant.bookstore.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_allBooksFragment"
            app:destination="@id/allBooksFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="kz.adamant.bookstore.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_filterBottomSheet"
            app:destination="@id/filterBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="kz.adamant.bookstore.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <dialog
        android:id="@+id/filterBottomSheet"
        android:name="kz.adamant.bookstore.ui.search.FilterBottomSheet"
        android:label="FilterBottomSheet" >
        <action
            android:id="@+id/action_filterBottomSheet_to_searchFragment"
            app:destination="@id/searchFragment" />
    </dialog>
    <fragment
        android:id="@+id/allBooksFragment"
        android:name="kz.adamant.bookstore.ui.home.AllBooksFragment" >
        <action
            android:id="@+id/action_allBooksFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="booksType"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="kz.adamant.bookstore.ui.bookdetail.BookDetailFragment"
        android:label="Book Detail" >
        <argument
            android:name="book"
            app:argType="kz.adamant.bookstore.models.BookDvo" />
    </fragment>
    <action
        android:id="@+id/action_global_bookDetailFragment"
        app:destination="@id/bookDetailFragment"/>
    <fragment
        android:id="@+id/bookScannerFragment"
        android:name="kz.adamant.bookstore.ui.scanner.BookScannerFragment"
        android:label="Book Scanner" />
</navigation>